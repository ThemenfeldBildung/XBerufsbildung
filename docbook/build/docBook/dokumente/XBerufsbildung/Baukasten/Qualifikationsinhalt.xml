         <thead>
            <row>
               <entry namest="indent0" nameend="page" align="center">Kindelemente von <emphasis role="codebf">Qualifikationsinhalt</emphasis>
               </entry>
            </row>
            <row>
               <entry namest="indent0" nameend="child">Kindelement</entry>
               <entry>Typ</entry>
               <entry>Anz.</entry>
               <entry>Ref.</entry>
               <entry>Seite</entry>
            </row>
