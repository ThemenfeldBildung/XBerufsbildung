            <row>
               <entry namest="indent0" nameend="child">
                  <emphasis role="bold">auszubildender</emphasis>
               </entry>
               <entry>
                  <emphasis role="codebf">Auszubildender</emphasis>
               </entry>
               <entry>
                  <emphasis role="bold">1</emphasis>
               </entry>
               <entry>
                  <xref linkend="XBerufsbildung.Baukasten.Kernkomponenten.Auszubildender"
